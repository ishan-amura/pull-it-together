<div class="container">
<div class="card">
		<div class="card-content">
			<div class="card-title right">
				<%= @post.user.name if @post.user %>
			</div>
			<div class="card-title">
				<%= @post.title %>
			</div>
			<div class="clearfix"></div>
			<p>Belongs to Project:<%= link_to @post.project.title, user_project_path(current_user,@post.project)%></p>
			<%= @post.body %>
			<div class="divider"></div>
			<%= render 'comments/index', post:@post%>
		</div>
		<div class="card-action">
			<%= link_to(follow_post_path(@post),method: :post) do%>
						follow
			<% end %>
			<%= link_to 'Delete',  project_post_path(@post.project,@post), method: :delete %>
		</div>
</div>
</div>