<div class="card">
	<div class="card-content">
		<span class="card-title left"><%= link_to @task.title %></span>
		<button class="dropdown-button no-btn card-title right" data-activates="dropdown1">
		<% if @task.user %>
		<div class="chip">
    	<%= @task.user.name %>
 	 	</div>
 	 	<% else %>
 	 	<div class="circular-button">
			<i class="material-icons icon-hover dash-border">person_add</i>
		</div>
		<% end %>
  	</button>
		<div class="clearfix"></div>
		<p> <%= @task.description %> </p>
		<ul class="collection with-header">
			<li class="collection-header"><b>Sub Tasks</b></li>
			
			<li class="collection-item">
			</li>
		</ul>
	</div>
	<div class="card-action">
	
	<%= link_to 'Delete Task', [@project,@task],method: :delete, data: {confirm: "Are you sure?"} %>
	</div>
</div>

<ul id="dropdown1" class="dropdown-content full-width">
	<% @project.members.each do |member|%>
		<li class="padding assign-member">
			<p class="details" style="display: none;"
			 data-id="<%= member.id%>"
			 data-project-id="<%= params[:project_id] %>"
			 data-task-id="<%= params[:id] %>"
			 data-path="<%= project_task_url(@project,@task)%>" ></p>
			<p><%= member.name %></p>
			<p class="grey-text"><%= member.email %></p>
		</li>
		<li class="divider"></li>
	<% end %>
</ul>

