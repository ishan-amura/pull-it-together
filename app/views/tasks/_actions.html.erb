	<%	if task.user == current_user || current_user == task.parent_project.creator %>	
	<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
		<a class="btn-floating btn-large red">
			<i class="large material-icons">menu</i>
		</a>
		<ul>
			<li>
				<%= link_to([:edit,task.taskable,task],class:"btn-floating blue tooltipped",data:{
					position: "left",
					delay: 50,
					tooltip: "Edit #{task.class.name}"
					}) do %>
					<i class="material-icons">mode_edit</i>
				<% end %>
			</li>
			<li>
			<%= link_to([task.taskable,task],
			class:"btn-floating blue-grey tooltipped",
			method: :delete,
			data: {
				confirm: "Are you sure?",
				position: "left",
				delay: 50,
				tooltip: "Delete #{task.class.name}"
				}) do %>
					<i class="material-icons">delete_forever</i>
			<% end %>
			</li>
		</ul>
	</div>	
	<% end %>