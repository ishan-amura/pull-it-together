<div class="row">
	<div class="col s12 m12">
		<div class="card">
			<div class="card-content container">
				<%= form_for task, url: [task.taskable,task],
				method: :post do |f| %>
				<div class="row">
					<div class="input-field col s6">
						<%= f.label :title, "Title",class:"active" %>
						<%= f.text_field :title %>
					</div>
					<div class="input-field col s6">
						<select name="task[status]">
							<option value="complete">Complete</option>
							<option value="active">active</option>
							<option value="inactive">Inactive</option>
							<option value="none" selected>None</option>
						</select>
						<label>Status</label>
					</div>
				</div>
				<div class="row">
					<div class="input-field col s12">
						<%= f.label :description, "Description",class:"active" %>
						<%= f.text_area :description,class:"materialize-textarea" %>
					</div>
				</div>
				<div class="row">
					<div class="input-field col s4">
						<%= f.label :started_at, "Start Date",class:"active" %>
						<%= f.date_field :started_at,class:"datepicker" %>
					</div>
					<div class="input-field col s4">
						<%= f.label :due_date, "Due Date",class:"active" %>
						<%= f.date_field :due_date,class:"datepicker" %>
					</div>
					<div class="input-field col s4">
						<select name="task[priority]">
							<option value="normal" selected>Normal</option>
							<option value="low">Low</option>
							<option value="high">High</option>
							<option value="ASAP">ASAP</option>
						</select>
						<label>Priority</label>
					</div>
				</div>
				<div class="row">
					<% unless !task.tasks.empty? %>
					<div class="range-field col s4 offset-s4">
						<%= f.label :progress, "Progress",class:"active" %>
						<%= f.range_field :progress %>
					</div>
					<% end %>
				</div>
				<div class="row">
						<div class="input-field center">
							<%= f.submit class:"btn waves-effect waves-light" %>
						</div>
				</div>
				<% end %>
			</div>
		</div>
	</div>

</div>


