<div class="row">
	<div class="col s12 m12">
		<div class="card">
		<div class="card-content">
		<div class="card-title">Update: <%= task.title %></div>
		<%= form_for task, url: [task.taskable,task],
		 method: :patch do |f| %>
		<div class="row">
			<div class="input-field col s12">
				<%= f.label :title, "Title",class:"active" %>
				<%= f.text_field :title %>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s12">
				<%= f.label :description, "Description",class:"active" %>
				<%= f.text_area :description,class:"materialize-textarea" %>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s4">
				<%= f.label :started_at, "Start Date",class:"active" %>
				<%= f.date_field :started_at,class:"datepicker" %>
			</div>
			<div class="input-field col s4">
				<%= f.label :due_date, "Due Date",class:"active" %>
				<%= f.date_field :due_date,class:"datepicker" %>
			</div>
			<div class="input-field col s4">
				<select name="task[priority]">
					<option value="normal" selected>Normal</option>
					<option value="low">Low</option>
					<option value="high">High</option>
					<option value="ASAP">ASAP</option>
				</select>
				<label>Priority</label>
			</div>
			</div>
			<div class="row">
			<div class="input-field col s4">
				<select name="task[status]">
					<option value="complete">Complete</option>
					<option value="active">active</option>
					<option value="inactive">Inactive</option>
					<option value="none" selected>None</option>
				</select>
				<label>Status</label>
			</div>
			<% unless task.tasks %>
			<div class="input-field col s4">
				<%= f.label :progress, "Progress",class:"active" %>
				<%= f.number_field :progress %>
			</div>
			<% end %>
			<div class="input-field col s4">
				<%= f.submit "update", :disable_with => 'Creating...',class:"btn waves-effect waves-light" %>
			</div>
		</div>
		<% end %>
		</div>
</div>
	</div>

</div>


