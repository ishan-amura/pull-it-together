<div class="row">
	<div class="col s12">
		<%= current_user.name + "'s" %> Projects
	</div>
</div>
<div class="">
	<div class="row">
	<div class="col s4 fixed">
			<ul class="collection">
				<a class="collection-item" onclick="toggle('projects')">Projects</a>
				<a class="collection-item" onclick="toggle('tasks')">Tasks</a>
			</ul>
	</div>
	<div class="col s8" id="projects">
		<%= render 'users/projects', projects: @projects %>
	</div>
	<div class="col s8 hide" id="tasks">
		<% current_user.tasks.each do |task| %>
			<div class="card">
			<div class="card-content">
				<div class="card-title">
					<%= link_to task.title, task_path(task) %>
				</div>
				<%= task.description %>
			</div>
			<div class="card-actions">
			</div>
			</div>
		<% end %>
	</div>
</div>