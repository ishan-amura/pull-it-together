<div class="row">
	<div class="col s12">
		<%= current_user.name + "'s" %> Projects
	</div>
</div>
<div class="container">
	
	<% @projects.each do |project| %>
	<div class="card">
		<div class="card-content">
		<div class="progress" style="height: 20px;">
      	<div class="determinate" style='width: <%= project.progress %>%;'>
      		<div class="green-text" style="float:right;margin-right: -50px">
      			<% if !project.progress.nil? %>
      					<%= project.progress %>%
      			<% else %>
      			0%
      			<% end %>
      		</div>
      	</div>
  		</div>
			<span class="card-title left"><%= link_to project.title, user_project_path(current_user,project) %></span>
			<ul class="member-list right">
				<% project.members.each do |user| -%>
				<li class="collection-item avatar left">
					<%= render 'users/avatar', user: user %>
				</li>
				<% end %>
				<% if current_user == project.creator %>
				<li class="left">
						<%= link_to(new_project_user_path(project),class:"circular-button grey-text",title:"Add new member") do %>
						<i class="material-icons icon-hover dash-border">person_add</i>
						<% end %>
				</li>
				<% end %>
			</ul>
			<div class="clearfix"></div>
			<p class="grey-text">Started by <%= project.creator.name %></p>
			<p><%= project.description %></p>
			<div class="row">
			<div class="col s4">
				<ul class="collection with-header">
					<li class="collection-header"><b>Tasks</b></li>
				</ul>
			</div>
			</div>
		</div>
		<div class="card-action">	
		<% if current_user == project.creator %>
			<%= link_to 'Delete Project', [project.creator,project],method: :delete, data: {confirm: "Are you sure?"} %>
		<% end %>
		</div>
	</div>
	<% end %>
</div>