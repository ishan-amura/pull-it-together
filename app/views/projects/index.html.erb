<div class="row">
	<div class="col s12">
		<%= current_user.name + "'s" %> Projects
	</div>
</div>
<div class="container">
	<% @projects.each do |project| -%>
	<div class="card">
		<div class="card-content">
			<span class="card-title"><%= link_to project.title, user_project_path(current_user,project) %></span>
			<p class="grey-text">Started by <%= project.creator.name %></p>
			<p><%= project.description %></p>
			<ul class="collection with-header">
				<li class="collection-header"><b>Members</b></li>
				<% project.members.each do |user| -%>
				<li class="collection-item avatar">
					<%= render 'users/avatar', user: user %>
					<span><%= user.name %></span>
				</li>
				<% end %>
			</ul>
		</div>
		<div class="card-action">
			<%= link_to 'Add member', new_project_user_path(project) %>
			<%= link_to 'Delete Project', [project.creator,project],method: :delete, data: {confirm: "Are you sure?"} %>
		</div>
	</div>
	<% end %>
</div>

