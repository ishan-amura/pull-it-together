<div class="row">
	<div class="col s12">
		<div class="card">
			<div class="card-content">
			<%=link_to 'Add Post',new_project_post_path(project),class:"card-title" %>
			</div>
		</div>
	</div>
</div>
<% @posts.each do |post| %>
<div class="row">
	<div class="col s12">
		<div class="card">
			<div class="card-content">
				<div class="card-title right">
					<% if current_user == post.user %>
						<%= link_to(project_post_path(post.project, post),method: :delete, data: {confirm: "Are you sure?"},class:"grey-text") do  %>
						<i class="material-icons">remove_circle</i>
					<% end %>
					<% end %>
				</div>
				<div class="card-title"><%= link_to post.title,project_post_path(project,post) %></div>
				<p><%= post.body %></p>
				<ul class="collection with-header comments">
					<li class="collection-header"><b>Comments</b></li>
					<%= render post.comments%>
					<%= render 'posts/comment_form', post: post%>
				</ul>
			</div>
		</div>
	</div>
</div>
<% end %>