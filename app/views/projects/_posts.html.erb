<div class="row">
	<div class="col s12">
		<div class="card">
			<div class="card-content">
			<%=link_to 'Add Post',new_project_post_path(project),class:"card-title" %>
				
			</div>
		</div>
	</div>
</div>
<% @posts.each do |post| %>
<div class="row">
	<div class="col s12">
		<div class="card">
			<div class="card-content">
				<div class="card-title"><%= post.title %></div>
				<p><%= post.body %></p>
				<ul class="collection with-header comments">
					<li class="collection-header"><b>Comments</b></li>
					<%= render post.comments%>
					<%= render 'posts/comment_form', post: post%>
				</ul>
			</div>
		</div>
	</div>
</div>
<% end %>