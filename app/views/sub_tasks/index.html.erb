<div class="container">
	<div class="card">
		<div class="card-content">
			<% @subtasks.each do |subtask| %>
			<div class="progress" style="height: 20px;">
				<div class="determinate" style='width: <%= subtask.progress || 0 %>%'>
					<div class="green-text text-darken-4" style="position:relative;left:100%;">
						<% if subtask.progress %>
						<%= subtask.progress %>%
						<% else %>
						0%
						<% end %>
					</div>
				</div>
			</div>
			<span class="card-title"><%= link_to subtask.title %></span>


			<p> <%= subtask.description %> </p>
		</div>
		<div class="card-action">
			<% if subtask.user == current_user %>
			<%= link_to 'Delete SubTask', task_task_path(@task,subtask),method: :delete, data: {confirm: "Are you sure?"},class: "right" %>
			<%= link_to 'Edit SubTask', edit_task_task_path(@task,subtask) %>
			<% end %>
			<% end %>
		</div>
	</div>
</div>

